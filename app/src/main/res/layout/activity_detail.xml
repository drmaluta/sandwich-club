<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/image"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:paddingLeft="@dimen/image"
            android:paddingRight="@dimen/image"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="@string/detail_description_label"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/textview"
            android:layout_marginStart="@dimen/textview"
            android:paddingTop="@dimen/padtextview"/>

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginStart="@dimen/textview"
            android:layout_marginEnd="@dimen/textview"
            android:paddingTop="@dimen/padtextview"
            android:paddingBottom="10dp"/>

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="0.2dp"
            android:background="@color/black"
            android:layout_marginStart="@dimen/textview"
            android:layout_marginEnd="@dimen/textview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="@string/detail_place_of_origin_label"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:paddingTop="@dimen/padtextview"
            android:layout_marginStart="@dimen/textview"
            android:layout_marginEnd="@dimen/textview" />

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginStart="@dimen/textview"
            android:layout_marginEnd="@dimen/textview"
            android:paddingTop="@dimen/padtextview"
            android:paddingBottom="10dp"/>

        <View
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="0.2dp"
            android:background="@color/black"
            android:layout_marginStart="@dimen/textview"
            android:layout_marginEnd="@dimen/textview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="@dimen/textview"
            android:layout_marginEnd="@dimen/textview"
            android:paddingTop="@dimen/padtextview" />

        <TextView
            android:id="@+id/also_known_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginStart="@dimen/textview"
            android:layout_marginEnd="@dimen/textview"
            android:paddingTop="@dimen/padtextview"
            android:paddingBottom="10dp" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/black"
            android:layout_marginStart="@dimen/textview"
            android:layout_marginEnd="@dimen/textview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="@string/detail_ingredients_label"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="@dimen/textview"
            android:layout_marginEnd="@dimen/textview"
            android:paddingTop="@dimen/padtextview" />

        <TextView
            android:id="@+id/ingredients_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginStart="@dimen/textview"
            android:layout_marginEnd="@dimen/textview"
            android:paddingTop="@dimen/padtextview" />

    </LinearLayout>
</ScrollView>
